}

@article{reddan2024,
  title = {Film Intervention Increases Empathic Understanding of Formerly Incarcerated People and Support for Criminal Justice Reform},
  author = {Reddan, Marianne C. and Garcia, Sydney B. and Golarai, Golijeh and Eberhardt, Jennifer L. and Zaki, Jamil},
