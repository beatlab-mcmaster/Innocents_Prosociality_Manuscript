@article{swarbrick2019,
  title = {How {{Live Music Moves Us}}: {{Head Movement Differences}} in {{Audiences}} to {{Live Versus Recorded Music}}},
  shorttitle = {How {{Live Music Moves Us}}},
  author = {Swarbrick, Dana and Bosnyak, Dan and Livingstone, Steven R. and Bansal, Jotthi and {Marsh-Rollo}, Susan and Woolhouse, Matthew H. and Trainor, Laurel J.},
